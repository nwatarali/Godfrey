<p id="notice"><%= notice %></p>

<h1>Student Details</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.content %></td>
        <td><%= link_to 'Show', status , class:'btn btn-primary btn xs'%></td>
        <td><%= link_to 'Edit', edit_status_path(status), class:'btn btn-info btn xs' %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path, class:'btn btn-success'%>
